<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:scrollbars="none">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		tools:context=".activity.MainActivity">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="Main Activity"
			android:textAppearance="@android:style/TextAppearance.Large"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/activity_horizontal_margin"
			android:text="If there is notification payload in incoming message and app in background, this example will not work."/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/activity_horizontal_margin"
			android:text="Mapping using code data payload"
			android:textAppearance="@android:style/TextAppearance.Medium"/>

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="32dp"
			android:layout_marginRight="32dp"
			android:layout_marginTop="8dp"
			android:background="@drawable/form_border">

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="code"/>

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="Map to"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="0"/>

				<TextView
					android:layout_weight="1"
					android:text="MainActivity"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="1"/>

				<TextView
					android:layout_weight="1"
					android:text="SecondActivity"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="2"/>

				<TextView
					android:layout_weight="1"
					android:text="ThirdActivity"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="3"/>

				<TextView
					android:layout_weight="1"
					android:text="StandaloneActivity"/>
			</TableRow>
		</TableLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/activity_horizontal_margin"
			android:text="Mapping using deep link data payload"
			android:textAppearance="@android:style/TextAppearance.Medium"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="deep link: nar://launch/{path}"/>

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="32dp"
			android:layout_marginRight="32dp"
			android:layout_marginTop="8dp"
			android:background="@drawable/form_border">

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="path"/>

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="Map to"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="main"/>

				<TextView
					android:layout_weight="1"
					android:text="MainActivity"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="second"/>

				<TextView
					android:layout_weight="1"
					android:text="SecondActivity"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="third"/>

				<TextView
					android:layout_weight="1"
					android:text="ThirdActivity"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="alone"/>

				<TextView
					android:layout_weight="1"
					android:text="StandaloneActivity"/>
			</TableRow>
		</TableLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/activity_horizontal_margin"
			android:text="Relationship of Activities"
			android:textAppearance="@android:style/TextAppearance.Medium"/>

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="32dp"
			android:layout_marginRight="32dp"
			android:layout_marginTop="8dp"
			android:background="@drawable/form_border">

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="Activity"/>

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="Parent"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:text="MainActivity"/>

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="-"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:text="SecondActivity"/>

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="MainActivity"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:text="ThirdActivity"/>

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="SecondActivity"/>
			</TableRow>

			<TableRow android:padding="4dp">

				<TextView
					android:layout_weight="1"
					android:text="StandaloneActivity"/>

				<TextView
					android:layout_weight="1"
					android:gravity="center"
					android:text="-"/>
			</TableRow>
		</TableLayout>
	</LinearLayout>

</ScrollView>
