<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.gmail.brianbridge.notificationapprouting"
		  xmlns:android="http://schemas.android.com/apk/res/android">

	<application
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity android:name=".activity.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".activity.SecondActivity"
			android:parentActivityName=".activity.MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activity.MainActivity"/>
		</activity>
		<!--<activity android:name=".activity.ThirdActivity"-->
				  <!--android:parentActivityName=".activity.SecondActivity">-->
			<!--<meta-data-->
				<!--android:name="android.support.PARENT_ACTIVITY"-->
				<!--android:value=".activity.SecondActivity"/>-->
		<!--</activity>-->
		<!--<activity android:name=".activity.StandaloneActivity"/>-->

		<service
			android:name=".fcm.MyFirebaseMessagingService">
			<intent-filter>
				<action android:name="com.google.firebase.MESSAGING_EVENT"/>
			</intent-filter>
		</service>

		<service
			android:name=".fcm.MyFirebaseInstanceIDService">
			<intent-filter>
				<action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
			</intent-filter>
		</service>

	</application>
</manifest>